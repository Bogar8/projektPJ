<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLoginWithUsernameAndPassword3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:onClick="exitApp"
        android:text="@string/exit"
        android:layout_marginTop="@dimen/btn_margin"
        android:textSize="@dimen/text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginWithUsernameAndPassword2" />

    <Button
        android:id="@+id/btnLoginWithUsernameAndPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_margin"
        android:background="@drawable/button_style"
        android:onClick="register"
        android:text="@string/register"
        android:textSize="@dimen/text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginWithUsernameAndPassword" />

    <Button
        android:id="@+id/btnLoginWithCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_style"
        android:onClick="loginCamera"
        android:text="@string/login_with_camera"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginWithUsernameAndPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBox"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnLoginWithUsernameAndPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/button_style"
        android:onClick="loginWithUsernameAndPassword"
        android:text="@string/login"
        android:textSize="@dimen/text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginWithCamera" />

    <ImageView
        android:id="@+id/ivBox"
        android:layout_width="269dp"
        android:layout_height="223dp"
        android:layout_marginBottom="@dimen/margin_25"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginWithCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hglMain"
        app:srcCompat="@drawable/ic_box" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hglMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>